@model ControleDeContas.Models.Produto

@{
    ViewData["Title"] = "Editar";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />


            <div class="form-group form-check">
                <input required asp-for="Pago" class="form-check-input" type="checkbox" id="checkboxPago" />
                <label asp-for="Pago" class="control-label form-check-label" for="checkboxPago">Pago</label>
                <span asp-validation-for="Pago" class="text-danger"></span>
            </div>

            

            <br />

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br />

<div>
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
